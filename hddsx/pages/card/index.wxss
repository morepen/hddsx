.authorize-box,.bomb-box{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  z-index: 2
}
.black-bg{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5
}
.box-con,.authorize-con{
  width: 76%;
  border-radius: 10rpx;
  position:fixed;
  height:100px;
  margin-top:-50px;
  top:50%;
  left:12%;
  z-index:999999999; 
  background:#fff;  
}
.box-con .item-tit{
  line-height: 102rpx;
  border-bottom: 1rpx solid #c9c9c9;
}
.box-con .item-con{
  padding: 30rpx 95rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #c9c9c9;
}
.box-con .item-btn{
  width: 100%;
  line-height: 100rpx;
}
.box-con .item-btn1{
  box-sizing: border-box;
  border-right: 1rpx solid #c9c9c9;
}
.authorize-tit{
  display:block;
  line-height: 100rpx;
  text-align:center
}
.authorize-btn{
  width: 88%;
  background: #51a939;
  height:36px;
  line-height:36px;
  color:#fff;
  }
.authorize-btn-img{
  width: 50rpx;
  height: 41rpx;
  vertical-align: middle;
  margin: 0 15rpx 0 0;
}
