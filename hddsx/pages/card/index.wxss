.container{
  position: relative;
  width: 100%;
  height: 100vh;
}
.map {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 中心标记点 */
.center {
  width:32px;
  height:40px;
  margin: 0 auto;
  position: relative;
  top: calc( 50% - 40px );
}

/* 搜索按钮 */
.searchbtn {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 300rpx;
  left: 20rpx;
}

.searchbtn cover-image {
  width: 120rpx;
  height: 120rpx;
}

/* 复位按钮 */
.location {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 210rpx;
  left: 20rpx;
}

.location cover-image {
  width: 120rpx;
  height: 120rpx;
}


.square{
   width: 144rpx;
  height: 144rpx;
  position: absolute;
  bottom: 340rpx;
  right: 0;
}
.square cover-image {
  width: 144rpx;
  height: 144rpx;
}

/* user按钮 */


.person {
  width: 144rpx;
  height: 144rpx;
  position: absolute;
  bottom: 210rpx;
  right: 0;
}

.person cover-image {
  width: 144rpx;
  height: 144rpx;
}

/* 详细位置展示 */
.address{
  position: absolute;
  width: 710rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-items: center;
  align-items: center;
  bottom: 60rpx;
}

.address-desc{
  font-size: 26rpx;  
  height: 80rpx;
}

.address-desc .blur{
  font-size: 30rpx;
  color: #333333;
}

.address-desc .detailed{
  padding-top: 10rpx;
    color: #c7c7c7;
}

.address-btn{
  flex: 1;
  text-align: center;
  color: #666666;
}

